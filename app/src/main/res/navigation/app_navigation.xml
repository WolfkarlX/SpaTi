<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/noteListingFragment"
        android:name="com.example.spaTi.ui.notes.NoteListingFragment"
        android:label="fragment_note_listing"
        tools:layout="@layout/fragment_note_listing" >
        <action
            android:id="@+id/action_noteListingFragment_to_myprofileFragment"
            app:destination="@id/myprofileFragment" />
        <action
            android:id="@+id/action_noteListingFragment_to_noteDetailFragment"
            app:destination="@id/noteDetailFragment" />
        <action
            android:id="@+id/action_noteListingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_noteListingFragment_to_servicesFragment"
            app:destination="@id/servicesFragment" />
    </fragment>

    <fragment
        android:id="@+id/noteDetailFragment"
        android:name="com.example.spaTi.ui.notes.NoteDetailFragment"
        android:label="fragment_note_detail"
        tools:layout="@layout/fragment_note_detail" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.spaTi.ui.auth.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_noteListingFragment"
            app:destination="@id/noteListingFragment" />

        <action
            android:id="@+id/action_registerFragment_to_servicesFragment"
            app:destination="@id/servicesFragment" />
        <action
            android:id="@+id/action_registerFragment_to_TermsFragment"
            app:destination="@id/TermsFragment" />
    </fragment>
    <fragment
        android:id="@+id/TermsFragment"
        android:name="com.example.spaTi.ui.notes.TermsFragment"
        android:label="TÃ©rminos y Condiciones" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.spaTi.ui.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_noteListingFragment"
            app:destination="@id/noteListingFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_ServicesFragment"
            app:destination="@id/servicesFragment" />
        <action
            android:id="@+id/action_loginFragment_to_SpaRegisterFragment"
            app:destination="@id/registerSpaFragment" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.spaTi.ui.auth.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />

    <fragment
        android:id="@+id/registerSpaFragment"
        android:name="com.example.spaTi.ui.SpaAuth.SpaRegisterFragment"
        android:label="fragment_register_spa"
        tools:layout="@layout/fragment_register_spa">
        <action
            android:id="@+id/action_registerSpaFragment_to_serviceDetailFragment"
            app:destination="@id/servicesFragment" />
    </fragment>

    <fragment
        android:id="@+id/servicesFragment"
        android:name="com.example.spaTi.ui.services.ServicesFragment"
        android:label="fragment_services"
        tools:layout="@layout/fragment_services" >
        <action
            android:id="@+id/action_servicesFragment_to_serviceDetailFragment"
            app:destination="@id/serviceDetailFragment" />
        <action
            android:id="@+id/action_servicesFragment_to_noteListingFragment"
            app:destination="@id/noteListingFragment" />
    </fragment>

    <fragment
        android:id="@+id/serviceDetailFragment"
        android:name="com.example.spaTi.ui.services.ServiceDetailFragment"
        android:label="fragment_service_detail"
        tools:layout="@layout/fragment_service_detail" />

    <fragment
        android:id="@+id/myprofileFragment"
        android:name="com.example.spaTi.ui.Profile.MyprofileFragmentt"
        android:label="fragment_my_profile"
        tools:layout="@layout/fragment_myprofile_" >

        <action
            android:id="@+id/action_myprofileFragment_to_editprofileFragment"
            app:destination="@id/editprofileFragment" />

        <action
            android:id="@+id/action_myprofileFragment_to_notelistingFragment"
            app:destination="@id/noteListingFragment" />

        <action
            android:id="@+id/action_myprofileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/editprofileFragment"
        android:name="com.example.spaTi.ui.Profile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" >

        <action
            android:id="@+id/action_editprofileFragment_to_myprofileFragment"
            app:destination="@id/myprofileFragment" />
    </fragment>

</navigation>