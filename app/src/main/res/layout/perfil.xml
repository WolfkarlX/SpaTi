<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Sección de perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#4CAF50"
            android:padding="20dp"
            android:gravity="center">

            <!-- Imagen de avatar -->
            <ImageView
                android:id="@+id/avatarImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/empone"
                android:layout_gravity="center"
                android:contentDescription="Avatar"
                android:layout_marginBottom="16dp"/>

            <!-- Nombre de usuario -->
            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jose Avalos"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"/>

            <!-- Correo electrónico -->
            <TextView
                android:id="@+id/userEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="javalos22@ucol.mx"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botones de opciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:background="@android:color/white"
            android:padding="8dp">

            <!-- Herramientas de perfil -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/emp"
                    android:contentDescription="Icono de herramientas"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Herramientas de perfil"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Privacidad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/emp"
                    android:contentDescription="Icono de privacidad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacidad"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Notificaciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/emp"
                    android:contentDescription="Icono de notificaciones"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notificaciones"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Reportes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/emp"
                    android:contentDescription="Icono de reportes"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reportes"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
