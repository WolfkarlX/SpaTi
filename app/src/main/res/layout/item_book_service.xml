<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemBookService"
    android:clickable="true"
    android:elevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/itemBookServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hidromasaje"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/itemBookServicePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600 MXN"
            android:textSize="14sp"
            android:paddingHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@+id/itemBookServiceName"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/itemBookServiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saber mÃ¡s"
            android:backgroundTint="@color/verde"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>