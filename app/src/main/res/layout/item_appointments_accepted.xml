<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="3dp"
    android:clickable="true"
    android:focusable="true"
    android:descendantFocusability="blocksDescendants"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corners"
        android:clickable="true"
        android:focusable="true">

        <!-- THERE ISNT APPOINTMENTS -->
        <TextView
            android:id="@+id/noAppointments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There is not appointments"
            android:textSize="40sp"
            android:textColor="#4A4A4A"
            android:fontFamily="@font/koho"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

        <!-- First Row -->
        <TextView
            android:id="@+id/tvUsuario_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="17dp"
            android:fontFamily="@font/koho"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Usuario"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:textColor="#4A4A4A"
            android:fontFamily="@font/koho"
            app:layout_constraintTop_toTopOf="@+id/tvUsuario_Label"
            app:layout_constraintBottom_toBottomOf="@+id/tvUsuario_Label"
            app:layout_constraintStart_toEndOf="@+id/tvUsuario_Label"/>

        <!-- Second Row -->
        <TextView
            android:id="@+id/tvReportes_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reportes:"
            android:fontFamily="@font/koho"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tvUsuario_Label"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvReportes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:textColor="#4A4A4A"
            android:fontFamily="@font/koho"
            app:layout_constraintTop_toTopOf="@+id/tvReportes_Label"
            app:layout_constraintBottom_toBottomOf="@+id/tvReportes_Label"
            app:layout_constraintStart_toEndOf="@+id/tvReportes_Label"/>

        <!-- Third Row -->
        <TextView
            android:id="@+id/tvServicio_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio:"
            android:fontFamily="@font/koho"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tvReportes_Label"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Servicio"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:textColor="#4A4A4A"
            android:fontFamily="@font/koho"
            app:layout_constraintTop_toTopOf="@+id/tvServicio_Label"
            app:layout_constraintBottom_toBottomOf="@+id/tvServicio_Label"
            app:layout_constraintStart_toEndOf="@+id/tvServicio_Label"/>

        <!-- Fourth Row -->
        <TextView
            android:id="@+id/tvFechaHora_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha y Hora:"
            android:fontFamily="@font/koho"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tvServicio_Label"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvFechaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17 de Septiembre, 3:00 PM"
            android:textSize="14sp"
            android:textColor="#4A4A4A"
            android:fontFamily="@font/koho"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/tvFechaHora_Label"
            app:layout_constraintBottom_toBottomOf="@+id/tvFechaHora_Label"
            app:layout_constraintStart_toEndOf="@+id/tvFechaHora_Label"/>

        <!-- Fifth Row -->
        <TextView
            android:id="@+id/tvCorreo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo:"
            android:fontFamily="@font/koho"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFechaHora_Label"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example@gmail.com"
            android:textSize="14sp"
            android:textColor="#4A4A4A"
            android:fontFamily="@font/koho"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/tvCorreo_label"
            app:layout_constraintBottom_toBottomOf="@+id/tvCorreo_label"
            app:layout_constraintStart_toEndOf="@+id/tvCorreo_label"/>

        <!-- Sixth Row -->
        <TextView
            android:id="@+id/tvtelefono_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono:"
            android:fontFamily="@font/koho"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCorreo_label"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvtelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="314127384"
            android:textSize="14sp"
            android:textColor="#4A4A4A"
            android:fontFamily="@font/koho"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/tvtelefono_label"
            app:layout_constraintBottom_toBottomOf="@+id/tvtelefono_label"
            app:layout_constraintStart_toEndOf="@+id/tvtelefono_label"/>

        <TextView
            android:id="@+id/tvsexo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo:"
            android:fontFamily="@font/koho"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tvtelefono_label"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvsexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eample"
            android:textSize="14sp"
            android:textColor="#4A4A4A"
            android:fontFamily="@font/koho"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/tvsexo_label"
            app:layout_constraintBottom_toBottomOf="@+id/tvsexo_label"
            app:layout_constraintStart_toEndOf="@+id/tvsexo_label"/>

        <Button
            android:id="@+id/btnRechazarCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar Cita"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/koho"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintTop_toBottomOf="@+id/tvsexo_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnGoToService"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnGoToService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VER SERVICIO"
            android:backgroundTint="@color/verde"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/koho"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintTop_toBottomOf="@+id/tvsexo_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnRechazarCita"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>