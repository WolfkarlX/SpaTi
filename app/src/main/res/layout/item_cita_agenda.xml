<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="22dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:clickable="true"
        android:focusable="true"
        android:descendantFocusability="blocksDescendants"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corners">

            <!-- Encabezado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_header"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/personal"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tvUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario: Nombre del Usuario"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/iv_Receipt_Icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/upload_document_ic_fill"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/white"
                    />

            </LinearLayout>

            <!-- Información de la cita -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Reportes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/report_active"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvReportes_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reportes:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tvReportes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="#4A4A4A" />
                </LinearLayout>

                <!-- Sexo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/sex"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvSexo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sexo"
                        android:textSize="16sp"
                        android:textColor="#4A4A4A" />
                </LinearLayout>

                <!-- Servicio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/servicios"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvServicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del Servicio"
                        android:textSize="16sp"
                        android:textColor="#4A4A4A" />
                </LinearLayout>

                <!-- Fecha y Hora -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/agenda"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvFechaHora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha y Hora: 17 de Septiembre, 3:00 PM"
                        android:textSize="16sp"
                        android:textColor="#4A4A4A" />
                </LinearLayout>

                <!-- Correo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/email"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvCorreo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="16sp"
                        android:textColor="#4A4A4A" />
                </LinearLayout>

                <!-- Telefono -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/phone"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvtelefono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telénofo"
                        android:textSize="16sp"
                        android:textColor="#4A4A4A" />
                </LinearLayout>

                <!-- Boton -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:backgroundTint="@android:color/transparent"
                    android:padding="0dp">

                    <Button
                        android:id="@+id/btnRechazarCita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancelar Cita"
                        android:backgroundTint="#b5b5b5"
                        android:textColor="@color/white"
                        android:fontFamily="@font/koho"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_columnSpan="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
