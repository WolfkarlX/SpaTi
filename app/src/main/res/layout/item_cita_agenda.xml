<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="22dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="3dp"
        android:clickable="true"
        android:focusable="true"
        android:descendantFocusability="blocksDescendants"
        tools:ignore="MissingConstraints">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_corners"
            android:clickable="true"
            android:focusable="true"
            android:columnCount="2"
            android:rowCount="5">

            <!-- First Row -->
            <TextView
                android:id="@+id/tvUsuario_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario:"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="17dp"
                android:fontFamily="@font/koho"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/tvUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Usuario"
                android:textSize="16sp"
                android:layout_marginStart="-38dp"
                android:textColor="#4A4A4A"
                android:fontFamily="@font/koho"
                android:layout_column="1"/>

            <!-- Second Row -->
            <TextView
                android:id="@+id/tvReportes_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reportes:"
                android:fontFamily="@font/koho"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/tvReportes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:layout_marginStart="-30dp"
                android:textColor="#4A4A4A"
                android:fontFamily="@font/koho"
                android:layout_column="1"/>

            <!-- Third Row -->
            <TextView
                android:id="@+id/tvServicio_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicio:"
                android:fontFamily="@font/koho"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/tvServicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Servicio"
                android:textSize="14sp"
                android:layout_marginStart="-35dp"
                android:textColor="#4A4A4A"
                android:fontFamily="@font/koho"
                android:layout_column="1"/>

            <!-- Fourth Row -->
            <TextView
                android:id="@+id/tvFechaHora_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha y Hora:"
                android:fontFamily="@font/koho"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/tvFechaHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17 de Septiembre, 3:00 PM"
                android:textSize="14sp"
                android:textColor="#4A4A4A"
                android:fontFamily="@font/koho"
                android:layout_column="1"/>

            <!-- Fifth Row -->
            <TextView
                android:id="@+id/tvCorreo_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo:"
                android:fontFamily="@font/koho"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/tvCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="example@gmail.com"
                android:textSize="14sp"
                android:layout_marginStart="-48dp"
                android:textColor="#4A4A4A"
                android:fontFamily="@font/koho"
                android:layout_column="1"/>

            <!-- Sixth Row -->
            <TextView
                android:id="@+id/tvtelefono_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono:"
                android:fontFamily="@font/koho"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/tvtelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="314127384"
                android:textSize="14sp"
                android:layout_marginStart="-36dp"
                android:textColor="#4A4A4A"
                android:fontFamily="@font/koho"
                android:layout_column="1"/>

            <Button
                android:id="@+id/btnRechazarCita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar Cita"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/koho"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"/>
        </GridLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
