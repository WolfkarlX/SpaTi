<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.spaTi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1C920B</item> <!-- Color para la barra -->
        <item name="colorPrimaryVariant">#388E3C</item> <!-- Color para la variante -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Color del texto/iconos sobre la barra -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Text appearance defaults -->
        <item name="android:textViewStyle">@style/CustomTextFontFamily</item>
        <item name="android:buttonStyle">@style/CustomTextFontFamily</item>
        <item name="android:editTextStyle">@style/CustomTextFontFamily</item>
        <item name="android:textAppearance">@style/CustomTextFontFamily</item>
        <item name="android:checkboxStyle">@style/CustomTextFontFamily</item>
    </style>

    <style name="TitilliumWebBold">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>

    <style name="TitilliumWebBlack">
        <item name="android:fontFamily">@font/titillium_web_black</item>
    </style>

    <style name="TitilliumWebLight">
        <item name="android:fontFamily">@font/titillium_web_light</item>
    </style>

    <style name="TitilliumWebRegular">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
    </style>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="SubTitleStyle">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="DescStyle">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="ChipTextStyle">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/verde</item>
    </style>

</resources>